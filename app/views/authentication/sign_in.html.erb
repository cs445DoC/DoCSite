<h1> Employee Login </h1>
<h4> Only current employees can go past this point. </h4>

<%= form_for @user, :as => :user, :url => sign_in_path(@user) do |f| %>
  <p>
  <%= f.label 'Email:' %> <br />
  <%= f.text_field :email %>

  <p>
  <%= f.label 'Password:'%> <br />
  <%= f.password_field :encrypted_password %>

  <p>
  <%= f.submit 'Login' %>
<% end %>
