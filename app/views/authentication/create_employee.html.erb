<h1> Create Account for New Employee Good</h1>

<%= form_for @user, :as => :user, :url => {:controller => 'authentication', :action => 'register'}, :method => :put do |f| %>
  <%= f.label 'First Name:' %>
  <%= f.text_field :first_name %>

  <p> 
  <%= f.label 'Last Name:' %>
  <%= f.text_field :last_name %>

  <p>
  <%= f.label 'Email Address:' %>
  <%= f.text_field :email %>

  <p> 
  <%= f.label 'New User Password:' %>
  <%= f.text_field :encrypted_password %>
  <p>
  <%= f.submit 'Create Employee Account' %>

<% end %>
